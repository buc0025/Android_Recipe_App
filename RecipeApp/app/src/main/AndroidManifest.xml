<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipe_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.AllRecipesDetailsActivity"
            android:configChanges="orientation"
            android:label="Recipe"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.AllRecipesActivity"
            android:configChanges="orientation"
            android:label="All Recipes"
            android:screenOrientation="portrait"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activities.CustomRecipesListActivity"
            android:configChanges="orientation"
            android:label="Custom Recipes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OwnRecipeActivity"
            android:configChanges="orientation"
            android:label="Recipe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreateRecipeActivity"
            android:configChanges="orientation"
            android:label="Create Recipe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FavoritesActivity"
            android:configChanges="orientation"
            android:label="Favorite Recipes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.InsideRecipeCategoryActivity"
            android:configChanges="orientation"
            android:label="Recipes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RecipeDetailsActivity"
            android:configChanges="orientation"
            android:label="Recipe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RecipeCategoriesActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider641797466537252"
            android:exported="true" />
    </application>

</manifest>