<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recipe_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name="com.example.recipe_app.activities.CustomRecipesListActivity"
            android:label="Custom Recipes"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.OwnRecipeActivity"
            android:label="Recipe"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.CreateRecipeActivity"
            android:label="Create Recipe"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.FavoritesActivity"
            android:label="Favorite Recipes"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.InsideRecipeCategoryActivity"
            android:label="Recipes"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.RecipeDetailsActivity"
            android:label="Recipe"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.recipe_app.activities.RecipeCategoriesActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:authorities="com.facebook.app.FacebookContentProvider641797466537252"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true"/>
    </application>

</manifest>